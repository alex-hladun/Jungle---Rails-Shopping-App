<section class="categories-show">

  <header class="page-header">
    <h1>
      <%= @category.name %>
      <% #raise @products.inspect %>
      <small>(<%= pluralize @products.size, 'product' %>)</small>
    </h1>
  </header>

  <div class="products">
    <%= render @products %>
  </div>

</section>
